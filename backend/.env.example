PORT=3000
NODE_ENV=development
APP_VERSION=1.0.0
FRONTEND_URL=http://localhost:3000

# Limits & Expirations
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
RATE_LIMIT_PUBLIC=150
RATE_LIMIT_AUTH=5
RATE_LIMIT_ACCESS=15
RATE_LIMIT_ADMIN=20
LOG_LEVEL=info

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@hostname/dbname?sslmode=require

# Upstash Redis
REDIS_URL=https://upstash-redis-url
REDIS_TOKEN=upstash-redis-token

# JWT Secrets
JWT_ACCESS_SECRET=your_access_secret
JWT_REFRESH_SECRET=your_refresh_secret

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://pub-xxxx.r2.dev

# Google OAuth (https://console.cloud.google.com → APIs & Services → Credentials)
# Add redirect URI in Google Console: http://localhost:PORT/api/v1/auth/callback/google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/callback/google
